<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:ignore="UseSwitchCompatOrMaterialXml">

        <TextView
            android:id="@+id/selectGamesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_the_games_you_play"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <Switch
            android:id="@+id/switchGame2"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:text="@string/minecraft"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/switchGame3"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:text="@string/league_of_legends"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/switchGame4"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:text="@string/pubg"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/switchGame5"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:text="@string/warzone"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/switchGame6"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:text="@string/apex_legends"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/switchGame7"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:text="@string/call_of_duty"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/switchGame8"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:text="@string/counter_strike_global_offensive"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/switchGame9"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:text="@string/overwatch"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/switchGame10"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:text="@string/rocket_league"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/switchGame11"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:text="@string/roblox"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/switchGame12"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:text="@string/among_us"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/switchGame13"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:text="@string/hearthstone"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Button
            android:id="@+id/submitGamesSelection"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:text="@string/submit"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/anotherlime"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
